<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
    
    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>administrator</from-outcome>
            <to-view-id>/adminTables.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>provider</from-outcome>
            <to-view-id>/providerTables.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>freelancer</from-outcome>
            <to-view-id>/freelancerTables.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>adminTables.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>p1</from-outcome>
            <to-view-id>/admin_freelancerDB.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>p2</from-outcome>
            <to-view-id>/admin_providerDB.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>p3</from-outcome>
            <to-view-id>/admin_logsDB.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>freelancerTables</from-view-id>
        <navigation-case>
            <from-outcome>p1</from-outcome>
            <to-view-id>/freelancer_profile.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>providerTables</from-view-id>
        <navigation-case>
            <from-outcome>p1</from-outcome>
            <to-view-id>/provider_freelancerSelect.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>admin_freelancerDB</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/faces/adminTables.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>admin_providerDB</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/adminTables.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>admin_logsDB</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/adminTables.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>freelancer_profile</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/freelancerTables.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>provider_freelancerSelect</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/providerTables.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
